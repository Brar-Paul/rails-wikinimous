<h2> Edit Article </h2>

<div class="container">

  <div class="form-container">
    <%= form_for(@article) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <br>
      <%= f.label :content %>
      <%= f.text_field :content%>
      <br>
      <%= f.submit %>
    <% end %>
  </div>
</div>
